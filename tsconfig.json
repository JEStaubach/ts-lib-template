{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "./dist",
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "src/*": ["./src/*"],
      "__tests__/*": ["./__tests__/*"]
    }
  },
  "include": [
    "**/*.ts", "node_modules/@types"
  ],
  "exclude": [
    "node_modules", "__mocks__/**/*.ts", "dist"
  ],
  "typeRoots": [
    "node_modules/@types", "src"
  ],
  "types": [
    "jest"
  ]
}
